{
  "checks": {
    "service-a-health": {
      "type": "metric",
      "command": "/usr/lib64/nagios/plugins/check_http -N -H localhost -p 8080 -u /healthz",
      "subscribers": ["service-a"],
      "interval": 5,
      "refresh": 60,
      "handlers": [
        "slack",
        "influxdb",
        "remediation"
      ],
      "contacts": ["team-a"],
      "output_format": "nagios_perfdata",
      "dependencies": [
        "network-device-0/network-device-health"
      ],
      "remediation": {
        "service-a-remediation1": {
          "occurrences": ["6"],
          "severities": [1,2]
        },
        "service-a-remediation2": {
          "occurrences": ["7+"],
          "severities": [1,2]
        },
        "service-a-remediation3": {
          "occurrences": ["14+"],
          "severities": [1,2]
        }
      }
    }
  }
}
