{
  "checks": {
    "service-b-health": {
      "type": "metric",
      "command": "/usr/lib64/nagios/plugins/check_http -N -H localhost -p 8080 -u /healthz",
      "subscribers": ["service-b"],
      "interval": 5,
      "refresh": 60,
      "handlers": [
        "slack",
        "influxdb"
      ],
      "output_format": "nagios_perfdata"
    }
  }
}
